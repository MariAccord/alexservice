            CREATE TABLE application.order_status
            (
            id             UUID                     NOT NULL DEFAULT uuid_generate_v4() PRIMARY KEY,
            order_id       UUID                     NOT NULL,
            status_type_id UUID                     NOT NULL,
            user_id        UUID                     NOT NULL,
